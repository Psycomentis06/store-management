{% extends 'base.html.twig' %}

{% block title %}InventoryItem index{% endblock %}

{% block body %}
    <h1>InventoryItem index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Stock</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for inventory_item in inventory_items %}
            <tr>
                <td>{{ inventory_item.id }}</td>
                <td>{{ inventory_item.stock }}</td>
                <td>
                    <a href="{{ path('app_inventory_item_show', {'id': inventory_item.id}) }}">show</a>
                    <a href="{{ path('app_inventory_item_edit', {'id': inventory_item.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_inventory_item_new') }}">Create new</a>
{% endblock %}
