{% extends 'base.html.twig' %}

{% block title %}Store{% endblock %}

{% block body %}
    <h1>Store</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ store.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ store.name }}</td>
        </tr>
        <tr>
            <th>Address</th>
            <td>
                <ul class="list-unstyled">
                    {% if store.address is not empty %}
                        {% for i in store.address %}
                            <li><strong>{{ i.key }} :</strong> {{ i.value }} </li>
                        {% endfor %}
                    {% endif %}
                </ul>
            </td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('app_store_index') }}">back to list</a>

    <a href="{{ path('app_store_edit', {'id': store.id}) }}">edit</a>

    {{ include('store/_delete_form.html.twig') }}
{% endblock %}
