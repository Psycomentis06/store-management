{% extends 'base.html.twig' %}

{% block title %}Role{% endblock %}

{% block body %}
    <h1>Role</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ role.id }}</td>
            </tr>
            <tr>
                <th>Role</th>
                <td>{{ role.role }}</td>
            </tr>
            <tr>
                <th>System</th>
                <td>{{ role.system ? 'Yes' : 'No' }}</td>
            </tr>
            <tr class="jumbotron">
                <th>Permissions ({{ role.permissions | length }}) </th>
                <td>
                    <ul>
                        {% for p in role.permissions %}
                            <li> {{ p.permission }} </li>
                        {% endfor %}
                    </ul>
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_role_index') }}">back to list</a>

    <a href="{{ path('app_role_edit', {'id': role.id}) }}">edit</a>

    {{ include('role/_delete_form.html.twig') }}
{% endblock %}
