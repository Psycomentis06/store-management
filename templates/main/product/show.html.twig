{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Sku</th>
                <td>{{ product.sku }}</td>
            </tr>
            <tr>
                <th>Discount</th>
                <td>{{ product.discount }}</td>
            </tr>
            <tr>
                <th>Guarantee</th>
                <td>{{ product.guarantee ? product.guarantee|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Properties</th>
                <td>{{ product.properties ? product.properties|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Digital</th>
                <td>{{ product.digital ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_product_index') }}">back to list</a>

    <a href="{{ path('app_product_edit', {'id': product.id}) }}">edit</a>

    {{ include('main/product/_delete_form.html.twig') }}
{% endblock %}
