{% extends 'base.html.twig' %}

{% block title %}Currency index{% endblock %}

{% block body %}
    <div class="my-2">
        <h1 class="my-2">Currency Page</h1>
        <a class="btn btn-primary" href="{{ path('app_currency_new') }}">Create new</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Currency</th>
                <th>CurrencyFullName</th>
                <th>Symbol</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for currency in currencies %}
            <tr>
                <td>{{ currency.id }}</td>
                <td>{{ currency.currency }}</td>
                <td>{{ currency.currencyFullName }}</td>
                <td>{{ currency.symbol }}</td>
                <td>
                    <a href="{{ path('app_currency_show', {'id': currency.id}) }}">show</a>
                    <a href="{{ path('app_currency_edit', {'id': currency.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_currency_new') }}">Create new</a>
{% endblock %}
