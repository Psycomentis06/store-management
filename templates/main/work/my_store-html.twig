{% extends 'main/base.html.twig' %}

{% block title %}My Store{% endblock %}

{% block body %}
    <div class="text-center m-3" id="current-time"></div>

    {% if store is not empty %}
        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td> {{ store.id }} </td>
            </tr>
            <tr>
                <th>Name</th>
                <td>
                    {{ store.name }}
                </td>
            </tr>
            <tr>
                <th>Address</th>
                <td>
                    <ul class="list-unstyled">
                        {% if store.address is not empty %}
                            {% for i in store.address %}
                                <li><strong>{{ i.key }} :</strong> {{ i.value }} </li>
                            {% endfor %}
                        {% endif %}
                    </ul>
                </td>
            </tr>
            </tbody>
        </table>
    {% endif %}
{% endblock body %}
